<div class="container-fluid">


  <div class="row">
    <div class="col-9">
      <div class="jam-container">


        <h3><%= @jam_session.title %></h3>
          <div class="d-flex flex-row">
            <i class="fas fa-map-marker-alt"></i>
            <p ><%= @jam_session.location %></p>
          </div>


          <div class="d-flex flex-row">
            <i class="far fa-calendar-alt"></i>
            <i class="far fa-clock"></i>
            <p><%= @jam_session.starts_at %></p> <!-- TODO: format time and date -->
            <p><%= @jam_session.ends_at %></p>
          </div>


          <div>
            <h3>Description</h3>
            <p><%= @jam_session.description %></p>
          </div>


          <div class="search-buttons">
            <%= submit_tag "Join", class: "btn btn-primary btn-sm searchbtn" %>
          </div>

       </div>



      <div class="users-container">


      </div>
    </div>


    <div class="col-3">
      <div class="jam-container">
        <h3>Messages</h3>
      </div>
    </div>
  </div>

</div> <!-- end of container -->

