<div class="row">
  <% @jam_sessions.each do |jam_session| %>
  <div class="card-grid col-lg-4 col-md-6 col-sm-12">
    <div class="card">
        <h5 class="card-title roboto"> <%= jam_session.title %> </h5>
        <p class="card-text"> <%= truncate(jam_session.location, length: 34, separator: ' ', omission: '') %> </p>
        <%= link_to "Check that jam" , jam_session_path(jam_session), class: "btn btn-primary" %>
    </div>
    </div>
  </div>
  <% end %>
