<% @jam_sessions.each do |jam_session| %>
  <div class="background-w">
    <div class="row">
      <div class="col-8">
        <h6><%= jam_session.title %></h6>

        <div class="row">
          <div class="col-6">
            <p class="subtitle"><%= jam_session.location %></p>
          </div>
          <div class="col-6">
            <p class="subtitle"><%= jam_session.starts_at.strftime("%b %C")%> <!-- - <%= jam_session.ends_at.strftime("%I:%M %p") %> --> </p>
          </div>
        </div>

        <p><%= jam_session.description %></p>
        <%= link_to "See more", jam_session_path(jam_session), class: "btn-sm hot-pink" %>
      </div>

      <!-- avatar and instrument icon -->
      <div class="col-3 border-left">
        <!-- @instruments.each do cl_image_tag -->
        <% jam_session.spots.each do |spot| %>
          <% instrument = Instrument.find(spot.instrument_id) %>
          <%= cl_image_tag instrument.photo.key, width: 50 %>
        <% end %>
        <!--  cl_image_tag @guitar.photo.key, height: 300, width: 50, crop: :fill  -->
      </div>
    </div>
  </div>
<% end %>


