<div class="navbar navbar-expand-sm navbar-dark bg-dark navbar-lewagon navbar-jamin">
  <%= link_to root_path, class: 'navbar-brand' do %>
    <h5 class="pacifico">Jamin</h5>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Home", root_path, class: "nav-link" %>
        <%#= link_to "Create a jam session", , class: "nav-link" %>
      </li>

      <% if current_user %>
        <li class="nav-item dropdown">
          <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="<%= cl_image_path current_user.profile_picture, height: 400, width: 400, crop: :fill, class: "avatar" %>" />
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">

            <%#= link_to "Dashboard",  user_dashboard_index_path(current_user), class: "dropdown-item" %>
            <%= link_to "Create a jam session", new_jam_session_path , class: "dropdown-item" %>
            <%= link_to "Dashboard", dashboards_path(current_user), class: "dropdown-item" %>
            <%= link_to "Profile", profile_path(current_user), class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>

      <% else %>
        <li class="nav-item active">
          <%= link_to "Log in", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
